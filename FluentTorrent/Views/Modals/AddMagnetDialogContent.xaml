<Page
    x:Class="FluentTorrent.Views.Modals.AddMagnetDialogContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <TextBox
            x:Name="DialogMagnetLinks"
            MinWidth="400"
            MinHeight="150"
            AcceptsReturn="True"
            AutomationProperties.Name="multi-line TextBox"
            IsSpellCheckEnabled="True"
            SelectionHighlightColor="Green"
            TextWrapping="Wrap" />
        <TextBlock
            Margin="0,8,0,0"
            Text="One link per line (HTTP links, magnet links, info-hashes are supported)"
            TextWrapping="Wrap" />
    </StackPanel>
</Page>